<%- include("./partials/navbar") %>
<!-- Full Page Intro -->
<div class="view"
    style="background-image: url('stylesheets/images/bg-01.jpg'); height: 100%; background-repeat: no-repeat; background-size: cover; background-position: center center;">

    <body>
        <div class="container-fluid">
            <br>
            <h2>Projects</h2>
            <hr>

            <div class="container">
                <h3>Filters</h3>
                <form id="form-filter" method="GET">
                    <input type="hidden" name="page" value="1">
                    <div class="form-group row">
                        <label for="inputID" class="col-sm-2 col-form-label"> <input type="checkbox" name="checkID">
                            ID</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="inputID" placeholder="ID">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputName" class="col-sm-2 col-form-label"> <input type="checkbox" name="checkName">
                            Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="inputName" placeholder="Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputBoolean" class="col-sm-2 col-form-label"> <input type="checkbox"
                                name="checkMember">
                            Member</label>
                        <div class="col-sm-10">
                            <select class="custom-select" name="inputMember">
                                <option value="">Choose Member</option>

                                <option value="1">Eko Prasetyo</option>

                                <option value="2">Romi Sunade</option>

                                <option value="3">Asep Cikungunya</option>

                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn"
                                style="background-color: #321a75; color: #fff;">Search</button>
                            <a class="btn btn-info" href="/project" role="button">Show All</a>
                        </div>
                    </div>
                </form>
            </div>
            <hr>

            <div class="container">
                <form method="POST" action="/project/option">
                    <h3>Option</h3>
                    <div class="form-group row">
                        <div class="col-sm-2">Columns</div>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="checkID" name="chkid" value="true">
                                <label class="form-check-label" for="checkID">
                                    ID
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="checkName" name="chkname"
                                    value="true">
                                <label class="form-check-label" for="checkName">
                                    Name
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="checkMember" name="chkmember"
                                    value="true" >
                                <label class="form-check-label" for="checkMember">
                                    Member
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn"
                                style="background-color: #321a75; color: #fff;">Apply</button>
                        </div>
                    </div>
                </form>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col" hidden="">Name</th>
                            <th scope="col">Member</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>


                    </tbody>
                </table>

                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled ">
                            <a class="page-link" href="/project/?page=0" aria-label="Previous">
                                <span aria-hidden="true">«</span>
                            </a>
                        </li>

                        <li class="page-item active ">
                            <a class="page-link" href="/project/?page=1">1</a>
                        </li>

                        <li class="page-item disabled">
                            <a class="page-link" href="/project/?page=2" aria-label="Next">
                                <span aria-hidden="true">»</span>
                            </a>
                        </li>
                    </ul>
                </nav>

                <a class="btn" style="background-color: #321a75; color: #fff;" href="/project/add" role="button">Add</a>
            </div>
        </div>
    </body>
    <div class="flex-col-c p-t-155">
        <span class="txt1 p-b-17">
            Made by "Abushanum"
        </span>
</div>
<%- include("./partials/footer") %>