<%- include("./partials/header") %>
<%- include("./partials/navbar") %>
<!-- Full Page Intro -->
<div class="view"
    style="background-image: url('stylesheets/images/bg-01.jpg'); background-repeat: no-repeat; height : 150%; background-size: cover; background-position: center center;">


    <body>
        <div class="container-fluid">
            <br>
            <h1>Profile</h1>
            <hr>

            <div class="container">
                <h3><small>Hello, <%= result.firstname %> <%= result.lastname %></small> </h3>
                <br>
                <form id="form-filter" method="GET">
                    <input type="hidden" name="page" value="1">
                    <div class="form-group row">
                        <label for="inputID" class="col-sm-2 col-form-label">
                            Email</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="email" placeholder="@Email" value = "<%= result.email %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputName" class="col-sm-2 col-form-label"> 
                            Password</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="password" placeholder="Password" value = "<%= result.password %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail" class="col-sm-2 col-form-label"> 
                            First Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="firstname" placeholder=" FirstName" value = "<%= result.firstname %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail" class="col-sm-2 col-form-label"> 
                            Last Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="lastname" placeholder="Last Name" value = "<%= result.lastname %>">
                        </div>
                    </div>
                    <fieldset class="form-group">
                        <div class="form-group row">
                            <label for="inpuposition" class="col-sm-2 col-form-label"> 
                                Position</label>
                            <div class="col-sm-10">
                                <select class="custom-select" id="position" name="position">
                                    <option value="selected">Choose Position</option>
    
                                    <option value="Front End Developers" <%= result.position == 'Front End Developers' ? 'selected' : '' %></option>>Front End Developers</option>
    
                                    <option value="Back End Developers"  <%= result.position == 'Back End Developers' ? 'selected' : '' %></option>>Back End Developers</option>
    
                                    <option value="Full Stack Developers" <%= result.position == 'Full Stack Developers' ? 'selected' : '' %></option>>Full Stack Developers</option>
    
                                </select>
                            </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <div class="row">
                            <label for="inputEmail" class="col-sm-2 col-form-label">
                                Type</label>
                            <div class="col-sm-10">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="gridRadios1" name="typeJob"
                                        value="Full Time" <%= result.isfulltime == 'Full Time' ? 'checked' : '' %> checked="">
                                    <label class="form-check-label" for="gridRadios1">
                                        Full Time
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="gridRadios2" name="typeJob"
                                        value="Part Time" <%= result.isfulltime == 'Part Time' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="gridRadios2">
                                        Part Time
                                    </label>
                                </div>
                            </div>
                        </div>
                    </fieldset>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn"
                                style="background-color: #751a52; color: #fff;">Update</button>
                            <a class="btn btn-primary" href="/project" role="button">Back</a>
                        </div>
                    </div>
                </form>
            </div>
            <hr>


    </body>
    <div class="flex-col-c p-t-100">
        <span class="txt1 p-b-25" style="color: #fff;">
            Made by "Abushanum"
        </span>
    </div>


    <%- include("./partials/footer") %>